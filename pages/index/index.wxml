
<!--index.wxml-->
<view class="container">
  <view class="page">
    <view class="page__hd">
      <text class="page__title">小橙之家智能分享童书馆</text>
      <text class="page__desc">小橙之家智能分享童书馆</text>
    </view>
    <view class="page__bd">
      <view class="section section_gap swiper">
        <swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
          <block wx:for="{{background}}">
            <swiper-item>
              <view class="swiper-item bc_{{item}}"></view>
            </swiper-item>
          </block>
        </swiper>
      </view>      
    </view>
  </view>
</view>